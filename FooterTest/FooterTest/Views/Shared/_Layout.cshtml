<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/chatModule.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body onresize="toggleScreen()" onload="loadinitial()" onchange="loadinitial">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Live Chat", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Live Chat Sample</p>
        </footer>
    </div>

    <!--start of chat module-->
    <div class="chatbox" id="chatbox" style="display:none" >
        <div class="chathead" onclick="hideChat()">
            <span class="chattitle" id="chattitle"> Live Chat </span>
        </div>
        <div class="chatlogs" id="chatlogs">
            <!--start of chat-->

            <div class="chat">
                <div class="user">
                    <img src="~/Content/img/user.png" class="user-photo user" alt="">
                </div>
                <div class="chat-message user">
                    <p>Hello, how can I help you?</p>
                </div>
            </div>
            <!--
            <div class="chat">
                <div class="client" >
                    <img src="img/user-icon.jpg" class="user-photo client" alt="">
                </div>
                <div class="chat-message client">
                    <p>Hello!...</p>
                </div>
            </div>
            -->
            <!--end of chat-->
        </div>

        <div class="chatform">
            <textarea id="textfield" class="chatarea" rows="0"></textarea>
            <button class="sendBtn" id="sendBtn" onclick="appendText()">Send</button>
        </div>
    </div>

    <div class="bottom-chat">
        <button class="openChat" id="openChat" onclick="openChat()">Chat</button>
    </div>

    <div class="modal-container" id="chat-popout-modal" > 
        <div class="modal-content">
            <span class="close" id="modal-close" onclick="closeModal()">&times;</span>

            <h2> Please register to continue.</h2>
            
            <div class="form-group">
                <label for="client-fname">First Name</label>
                <input type="text" class="form-control" id="client-fname" />
            </div>
            <div class="form-group">
                <label for="client-lname">Last Name</label>
                <input type="text" class="form-control" id="client-lname" />
            </div>
            <div class="form-group">
                <label for="client-mobile">Mobile Number</label>
                <label id="resultmobile"></label>
                <input type="text" class="form-control" id="client-mobile" />
            </div>
            <div class="form-group">
                <label for="client-email">Email</label>
                <label id="result"></label>
                <input type="text" class="form-control" id="client-email" />
            </div>

            <span class="btn btn-default" id="chatRegister" onclick="registernewUser()">REGISTER</span>

         </div>
    </div>


    <!--end of chat module -->
    <script src="~/Scripts/chatModule.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
